<% layout('layouts/boilerplate') %>

  <div class="row">
    <h1 class="text-center">Edit Kemah</h1>
    <div class="col-6 offset-3">

      <form action="/perkemahan/<%=kemah._id%>?_method=PUT" method="POST" novalidate class="validated-forms" enctype="multipart/form-data">

        <div class="mb-3">
          <label class="form-label" for="judul">Judul Kemah: </label>
          <input class="form-control" type="text" name="kemah[judul]" id="judul" required value='<%= kemah.judul %>'>
          <div class="valid-feedback">
            Mantap udah keisi!
          </div>
        </div>

        

        <div class="mb-3">
          <label class="form-label" for="harga">Harga kemah: </label>

          <div class="input-group">

            <span class="input-group-text" id="price-label">Rp</span>
            <input class="form-control" type="number" name="kemah[harga]" required id="harga" aria-describeby="price-label" value='<%= kemah.harga %>'>
            <div class="valid-feedback">
              Mantap udah keisi!
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="lokasi">Lokasi kemah: </label>
          <input class="form-control" type="text" name="kemah[lokasi]" id="lokasi" required value='<%=kemah.lokasi%>'>
          <div class="valid-feedback">
            Mantap udah keisi!
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="deskripsi">Deskripsi: </label>
          <textarea class="form-control" type="text" name="kemah[deskripsi]" required id="deskripsi" value='<%=kemah.deskripsi%>'></textarea>
          <div class="valid-feedback">
            Mantap udah keisi!
          </div>
        </div>

        <div class="input-group mb-3">
          <input type="file" class="form-control" multiple id="inputGroupFile02" name="image">
          <label class="input-group-text" for="inputGroupFile02">Upload</label>
        </div>

        <div class="mb-3">
          <% kemah.gambar.forEach(function(img, i){  %> 
            <img src="<%= img.thumbnail %>" class="img-thumbnail">
            <div class="form-check-inline">
              <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
              
            </div>
            <label for="image-<%=i%>">Delete?</label>
            
            <% }) %> 
        </div>


        <div class="mb-3"><button class="btn btn-info">UPDATE</button></div>

      </form>

      <a href="/perkemahan">back to main menu</a>

    </div>
  </div>